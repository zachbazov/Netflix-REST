header.header
    nav.nav.nav--tvshows
        a.nav__el(href='/') All Media
    .header__logo
        img(src='/img/system/Netflix-logo.png' alt='Logo')
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Sign Out
            a.nav__el(href='/settings')
                img.nav__user-img(src=`/img/system/Netflix-logo.png` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/signin') Sign in
            a.nav__el.nav__el--cta(href='#') Sign up